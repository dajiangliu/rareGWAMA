#' format according to publication standard;
#'
#' @param n The number to be formatted;
#' @param digits how many digits to be retained;
#' @return formatted result a vector;
#' @export 
myFormat <- function(n,digits) {
    res <- character(0);
    if(length(which(abs(n)>1))>0)
        res[which(abs(n)>1)] <- as.character(round(n[which(abs(n)>1)],digits=digits));
    if(length(which(abs(n)>0.0001 & abs(n) <=1)))
        res[which(abs(n)>0.0001 & abs(n) <=1 )] <- as.character(format(n[which(abs(n)>0.0001 & abs(n) <=1 )],digits=digits,scientific=FALSE));
    if(length(which(abs(n)<=0.0001))>0)
        res[which(abs(n)<=0.0001)] <- as.character(format(n[which(abs(n)<=0.0001)],digits=digits,scientific=TRUE));
    return(res);
}
